script.
    $('#grid-3').click(function(e){
        $('.grid-3').removeClass("visibility")
        $('.grid-4').addClass("visibility")
        $('.list-product').addClass("visibility")
    })
    $('#grid-4').click(function(e){
        $('.grid-4').removeClass("visibility")
        $('.grid-3').addClass("visibility")
        $('.list-product').addClass("visibility")
    })
    $('#list').click(function(e){
        $('.grid-3').addClass("visibility")
        $('.grid-4').addClass("visibility")
        $('.list-product').removeClass("visibility")
    })